<project name="GibbetGame" default="compile" basedir="." xmlns:ivy="antlib:org.apache.ivy.ant">	<property name="flex.sdk.version.major" value="4.5" />	<property name="flex.sdk.version.minor" value="1.21328_mpl" />	<property name="out" value="${basedir}/out" />	<property name="FLEX_HOME" value="${basedir}/sdk" />	<get src="https://raw.github.com/bsideup/IvyHelper/master/build.ivy.xml" dest="build.ivy.xml" skipexisting="true" />	<import file="build.ivy.xml" />	<target name="publish" depends="update, compile" description="Publish">		<ivy:publish resolver="local" forcedeliver="true">			<artifacts pattern="${basedir}/out/[artifact].[ext]" />		</ivy:publish>	</target>	<target name="install" depends="update">		<mkdir dir="${out}" />		<mkdir dir="${FLEX_HOME}" />		<unzip src="lib/flex-${flex.sdk.version.major}.zip" dest="${FLEX_HOME}" overwrite="false" />		<taskdef file="${FLEX_HOME}/ant/flexTasks.tasks" classpath="${FLEX_HOME}/ant/lib/flexTasks.jar" />	</target>	<target name="compile" description="compile the source" depends="install">		<mxmlc file="${basedir}/src/GibbetGameBootstrap.mxml" dir="${basedir}" fork="true">			<sysproperty key="user.language" value="en" />			<sysproperty key="user.region" value="US" />			<load-config filename="${FLEX_HOME}/frameworks/flex-config.xml" />			<load-config filename="${basedir}/compiler-config.xml" />		</mxmlc>	</target>	<target name="clean" description="clean up">		<delete dir="${out}" failonerror="no" />	</target></project>